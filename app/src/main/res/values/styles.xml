<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">#3C4DA8</item>
        <item name="titleTextColor">@color/primary_text</item>
        <item name="colorControlNormal">#5A98F6</item>
        <item name="colorControlActivated">#3C4DA8</item>
        <item name="colorControlHighlight">#7a95b8</item>
        <item name="colorError">#fa0505</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <color name="primary_text">#FFFFFF</color>

    <!-- Custom TextInputLayout -->
    <style name="counterText">
        <item name="android:textColor">#aa5353cc</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>

</resources>
